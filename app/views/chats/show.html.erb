<%= form_with model:@chat , url: chats_path, method: :post do |f| %>
  <%= f.text_field :message %>
  <%= f.hidden_field :room_id %>
  <%= f.submit %>
<% end %>
<table>
  <thead>
    <tr>
      <td>投稿者名</td>
      <td>投稿内容</td>
    </tr>
  </thead>
  <tbody>
    <% @chats.each do |chat| %>
      <td><%= chat.user.name %></td>
      <td><%= chat.message %></td>
    <% end %>
  </tbody>
</table>